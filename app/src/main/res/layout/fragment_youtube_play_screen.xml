<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true">

    <FrameLayout
        android:id="@+id/fl_youtube_player"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@color/gray_light" />

    <LinearLayout
        android:id="@+id/ll_info"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="title"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tv_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="artist"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_controller"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/white">

        <ImageButton
            android:id="@+id/bt_bad"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/button_overlay"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:layout_margin="12dp"
            android:src="@drawable/icon_bad" />

        <ImageButton
            android:id="@+id/bt_back"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_gravity="center_vertical"
            android:scaleType="fitCenter"
            android:padding="2dp"
            android:background="@drawable/button_overlay"
            android:layout_margin="8dp"
            android:src="@drawable/icon_back" />

        <ImageButton
            android:id="@+id/bt_play"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/button_overlay"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:layout_margin="8dp"
            android:src="@drawable/icon_play" />

        <ImageButton
            android:id="@+id/bt_skip"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/button_overlay"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:layout_margin="8dp"
            android:src="@drawable/icon_skip" />

        <ImageButton
            android:id="@+id/bt_good"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/button_overlay"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:layout_margin="12dp"
            android:src="@drawable/icon_good" />
    </LinearLayout>
</LinearLayout>